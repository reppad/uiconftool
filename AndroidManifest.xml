<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="tommy.lcr.uiconftool"
      android:versionCode="10" android:versionName="1.2.2">
    <application android:label="@string/app_name"
	    android:icon="@drawable/icon_config">
        <activity android:name=".UiConfTool"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".UpdateView"
                  android:label="@string/web_name">
        </activity>
         <activity android:name=".Screenshot"
                  android:label="Screenshot">
        </activity>

    </application>
    
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
<uses-sdk android:minSdkVersion="7"></uses-sdk>
</manifest>