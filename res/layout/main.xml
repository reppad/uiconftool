<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
		
	<ImageView android:id="@+id/ImageViewTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/bandeau_titre"></ImageView>

	<Button android:text="@string/main_activateCT"
		android:id="@+id/ButtonActivateCT"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30px"></Button>
		
	<Spinner android:id="@+id/SpinnerInterfaces"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:prompt="@string/main_listInterfaces"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20px"></Spinner>
		
	<Button android:text="@string/main_ButtonPerso"
		android:id="@+id/ButtonPerso"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20px"></Button>
	
	<Button android:text="@string/main_buttonValid"
		android:id="@+id/ButtonValid"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="100px"></Button>
		
	<TextView android:text="Message"
		android:id="@+id/TextViewMessage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20px"></TextView>
		



</LinearLayout>